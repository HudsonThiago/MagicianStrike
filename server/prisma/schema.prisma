datasource db {
  provider = "sqlite"
  url = "file:./src/database/database.db"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id Int @id @default(autoincrement())
    username String
    email String
    password String
    games Game[]
    players Player[]
}

model Game {
    id Int @id @default(autoincrement())
    ownerId Int
    playerAmount Int
    active Boolean
    players Player[]
    owner User @relation(fields: [ownerId], references: [id])
}

model Player {
    id Int @id @default(autoincrement())
    playerId Int
    gameId Int
    owner Boolean
    game Game @relation(fields: [gameId], references: [id])
    user User @relation(fields: [playerId], references: [id])
}

